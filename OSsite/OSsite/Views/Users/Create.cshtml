@model OSsite.Models.User

@{
    ViewBag.Title = "Sign Up";
    Layout = null;
}
@Styles.Render("~/Content/bootstrap.css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Scripts/bootstrap.js")
@Scripts.Render("~/bundles/bootstrap")
@Styles.Render("~/Content/css")
@Styles.Render("~/Content/formStyle.css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/Scripts/modernizr-2.8.3.js")
<!DOCTYPE html>

<html>
<head lang="en">
    <meta name="viewport" content="width=device-width" />
    <title>SginUP</title>
</head>
<body>
    <div class="top"></div>
    <!--start Sgin UP Form-->
    <div class="LogIn-Form text-left just-center">
        <h3 class="mb-5">Sign Up</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.Name, new { @class = "text-secondary " })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control inputStyle" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.Email, new { @class = "text-secondary " })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control inputStyle" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.Label("Phone Number", new { @class = "text-secondary " })
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control inputStyle" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
                @*<div class="col-md-6 mb-3">
                        @Html.Label("Adress", new { @class = "text-secondary " })
                        @Html.PasswordFor(model => model.Adress, new { @class = "form-control inputStyle" } )
                        @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })
                    </div>*@
                <div class="col-md-6 mb-3">
                    @Html.Label("Password", new { @class = "text-secondary " })
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control inputStyle" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.Label("Confirm Password", new { @class = "text-secondary " })
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control inputStyle" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input is-invalid" type="checkbox" value="" id="invalidCheck3" aria-describedby="invalidCheck3Feedback" required>
                    <label class="form-check-label" for="invalidCheck3" style="color: #057ab0">
                        Agree to terms and conditions
                    </label>
                    <div id="invalidCheck3Feedback" class="invalid-feedback" style="color: #484848">
                        You must agree before submitting.
                    </div>
                </div>
            </div>
            <input type="submit" value="Create" class="btn btn-primary pl-4 pr-4" />
        }
    </div>
    <!--end Sgin IN Form-->
    @*<div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@

</body>
</html>